<meta charset="UTF-8">
<title>salary</title>
</head>
<body>
>
	<jsp:include page="header.jsp"></jsp:include>
	<section>
		<h2><b>회원매출조회</b></h2><br>
		
		<form>
			<table border="1">
			
			<tr>
				<td>회원 번호</td>
				<td>회원성명</td>
				<td>고객등급</td>
				<td>매출</td>
			</tr>
			<%
				Connection con = null; // int a = 0; 느낌
				Statement stmt = null;
				String grade="";
				
				try {
					conn = Util.getConnection();
					stmt = conn.createStatement();
					String sql = "me.SELECT custno, custname, grade, sum(mo.price) price " +
					"FROM member_tbl_02 me, money_tbl_02 mo " +
					"WHERE me.custno = mo.custno " +
					"GROUP BY me.custno, me.custname, me.grade " +
					"OTHER BY sum(mo.price) desc ";
					
					ResultSet rs = stmt.executeQuery(sql);
					while(rs.next()) {
						grade = rs.getString("grade") ;
						switch(grade) {
						case "A" :
							grade = "VIP";
							break;
						case "B" :
							grade = "일반";
							break;
						case "C" :
							grade = "직원";
							break;
						}
					}

			%>
			
			<tr>
			<td><%=rs.getString("custno") %></td>
			<tr><td><%=rs.getString("custname") %></td>
			<tr><td><%=grade %></td>
			<tr><td><%=rs.getString("price") %></td>
			</tr>
<% 
			
		
	}
	catch(Exception e){
		e.printStackTrace();
	}
%>
			</table>
		</form>
	</section>
	
